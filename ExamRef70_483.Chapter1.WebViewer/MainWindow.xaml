<Window x:Class="ExamRef70_483.Chapter1.WebViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamRef70_483.Chapter1.WebViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Name="HeaderLabel" Content="Webpage Viewer" HorizontalAlignment="Center" FontSize="48" Height="80" VerticalAlignment="Top"/>
        <Label Name="URLLabel" Content="URL:" Margin="40,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Name="URLTextBox" VerticalAlignment="Top" Margin="75,85,20,0" />
        <Button Name="LoadButton" Content="Load Webpage" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,115,150,0" Click="LoadButton_Click"/>
        <Button Name="LoadURLs" Content="Load URLs Webpage" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,115,-100,0" Click="LoadURLs_Click"/>
        <TextBlock Name="ResultTextBlock" Margin="20,150,20,50" TextWrapping="Wrap" />
        <TextBlock Name="StatusTextBlock" Text="Page loaded" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10" />
    </Grid>
</Window>
